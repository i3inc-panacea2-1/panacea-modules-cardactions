<UserControl x:Class="Panacea.Modules.CardActions.Views.Image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Panacea.Modules.CardActions.Views"
             xmlns:viewModel="clr-namespace:Panacea.Modules.CardActions.ViewModels"
             xmlns:panaceaCtrl="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <panaceaCtrl:CacheImage
            Grid.Column="1"
            Height="{DynamicResource FontSize-Normal}"
            Margin="3"
            VerticalAlignment="Bottom"
            ImageUrl="{Binding RelativeSource={RelativeSource AncestorType={x:Type viewModel:ImageViewModel}}, Path=Url}"
            RenderOptions.BitmapScalingMode="HighQuality" />
    </Grid>
</UserControl>
